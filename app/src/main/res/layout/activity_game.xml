<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">

    <Button
            android:text="戻る"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:id="@+id/backbutton" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/question"
            android:id="@+id/img1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="96dp"
            android:layout_marginStart="96dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/question"
            android:id="@+id/img2"
            app:layout_constraintStart_toEndOf="@+id/img1" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/question"
            android:id="@+id/img3"
            app:layout_constraintStart_toEndOf="@+id/img2" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="ヒャッハー"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="252dp"
            android:layout_marginStart="252dp" android:layout_marginTop="244dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="手持ちコイン："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/havecoin" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/havecoin" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>
    <TextView
            android:text="掛け金："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/betcoin" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/betcoin" android:layout_marginBottom="116dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>
    <ImageView
            android:layout_width="260dp"
            android:layout_height="251dp" app:srcCompat="@drawable/gamble_izonsyou"
            android:id="@+id/imageView6" android:layout_marginBottom="284dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" android:layout_marginRight="48dp"/>
</android.support.constraint.ConstraintLayout>